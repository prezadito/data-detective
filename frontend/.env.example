# API Configuration
VITE_API_URL=http://localhost:8000

# Application Configuration
VITE_APP_NAME=Data Detective
VITE_APP_VERSION=1.0.0

# Environment
VITE_ENV=development

# ============================================================================
# MONITORING & ERROR TRACKING
# ============================================================================

# Sentry Error Tracking
# Get your DSN from https://sentry.io (free tier: 5,000 errors/month)
# Create a separate project for frontend in Sentry dashboard
# Leave empty to disable Sentry
VITE_SENTRY_DSN=

# Sentry Environment (helps organize errors by environment)
# Options: development, staging, production
VITE_SENTRY_ENVIRONMENT=development

# Sentry Performance Monitoring (0.0 to 1.0)
# 0.1 = sample 10% of transactions (recommended to save quota)
# 1.0 = sample 100% of transactions (only for development)
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# Sentry Session Replay - Sample Rate for Normal Sessions (0.0 to 1.0)
# 0.1 = record 10% of user sessions
# Helps understand user behavior and reproduce bugs
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1

# Sentry Session Replay - Sample Rate for Error Sessions (0.0 to 1.0)
# 1.0 = record 100% of sessions that had errors (recommended)
# Always capture session replay when errors occur
VITE_SENTRY_REPLAYS_ERROR_SAMPLE_RATE=1.0
